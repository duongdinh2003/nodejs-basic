<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node JS Basic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/upload" class="active">Upload file</a>
    </div>
      
    <div class="upload-file-container">
        <form method="post" action="/upload-profile-pic" enctype="multipart/form-data">
            <div>
                <label>Avatar:</label>
                <input type="file" name="profile_pic">
            </div>
            <div>
                <button type="submit" class="btn-save">Save files</button>
            </div>
        </form>

        <form method="post" action="/upload-multiple-images" enctype="multipart/form-data">
            <div>
                <label>Select multiple images:</label>
                <input type="file" name="multiple-images" multiple>
            </div>
            <div>
                <button type="submit" class="btn-save">Save files</button>
            </div>
        </form>
    </div>
</body>
</html>